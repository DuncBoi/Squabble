<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/default_profile">
    <fragment
        android:id="@+id/editProfile"
        android:name="com.duncboi.realsquabble.EditProfile"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" >
        <action
            android:id="@+id/edit_profile_to_default"
            app:destination="@id/default_profile"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/editProfile_to_edit_bio"
            app:destination="@id/edit_bio"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left" />
        <action
            android:id="@+id/editProfile_to_edit_username"
            app:destination="@id/edit_username"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left" />
        <argument
            android:name="username"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="Username" />
        <argument
            android:name="bio"
            app:argType="string"
            android:defaultValue="Bio" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="name" />
        <action
            android:id="@+id/action_editProfile_to_cropper"
            app:destination="@id/cropper" />
        <argument android:name="bitmap"
            android:defaultValue="null" />
    </fragment>
    <fragment
        android:id="@+id/default_profile"
        android:name="com.duncboi.realsquabble.default_profile"
        android:label="fragment_default_profile"
        tools:layout="@layout/fragment_default_profile" >
        <action
            android:id="@+id/default_to_edit_profile"
            app:destination="@id/editProfile"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left" />
        <argument
            android:name="bio"
            app:argType="string"
            android:defaultValue="bio" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="name" />
        <argument
            android:name="username"
            app:argType="string"
            android:defaultValue="username" />
    </fragment>
    <fragment
        android:id="@+id/edit_username"
        android:name="com.duncboi.realsquabble.edit_username"
        android:label="fragment_edit_username"
        tools:layout="@layout/fragment_edit_username" >
        <action
            android:id="@+id/edit_username_to_editProfile"
            app:destination="@id/editProfile"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:launchSingleTop="false" />
        <argument
            android:name="username"
            app:argType="string"
            android:defaultValue="Username" />
        <argument
            android:name="bio"
            app:argType="string"
            android:defaultValue="bio" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="name" />
    </fragment>
    <fragment
        android:id="@+id/edit_bio"
        android:name="com.duncboi.realsquabble.edit_bio"
        android:label="fragment_edit_bio"
        tools:layout="@layout/fragment_edit_bio" >
        <action
            android:id="@+id/edit_bio_to_editProfile"
            app:destination="@id/editProfile"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
        <argument
            android:name="bio"
            app:argType="string"
            android:defaultValue="bio" />
        <argument
            android:name="username"
            app:argType="string"
            android:defaultValue="Username" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="name" />
    </fragment>
    <fragment
        android:id="@+id/cropper"
        android:name="com.duncboi.realsquabble.Cropper"
        android:label="fragment_cropper"
        tools:layout="@layout/fragment_cropper" >
        <argument
            android:name="uri" />
        <action
            android:id="@+id/action_cropper_to_editProfile"
            app:destination="@id/editProfile" />
    </fragment>

</navigation>