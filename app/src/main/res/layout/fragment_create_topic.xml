<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTopic">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:text="Create Topic"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_create_topic_back"
        app:layout_constraintEnd_toStartOf="@+id/b_create_topic_create"
        app:layout_constraintStart_toEndOf="@+id/iv_create_topic_back"
        app:layout_constraintTop_toTopOf="@+id/iv_create_topic_back" />

    <TextView
        android:id="@+id/b_create_topic_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Create"
        android:textColor="@color/googleBlue"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView20" />
    <ImageView
        android:id="@+id/iv_create_topic_back"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_create_topic_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/fredoka_one"
        android:textColor="@color/red"
        app:layout_constraintEnd_toEndOf="@+id/textView20"
        app:layout_constraintStart_toStartOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <ScrollView
        android:id="@+id/create_topic_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_create_topic_error">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/create_topic_constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="0dp"
                android:layout_height="195dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/rounded_edittext_register_login"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Picture:"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Description:"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/et_create_topic_headline" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Answer #2:"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textView24"
                app:layout_constraintTop_toBottomOf="@+id/et_create_topic_answer1" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Answer #1:"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textView25"
                app:layout_constraintTop_toBottomOf="@+id/et_create_topic_question" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Question:"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textView22"
                app:layout_constraintTop_toBottomOf="@+id/et_create_topic_description" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Headline:"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rg_create_topic_show_creator_info" />

            <EditText
                android:id="@+id/et_create_topic_headline"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_edittext_register_login"
                android:ems="10"
                android:fontFamily="@font/fredoka_one"
                android:hint="Headline"
                android:inputType="textPersonName"
                android:maxLength="26"
                android:paddingLeft="16dp"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView26" />

            <ImageView
                android:id="@+id/iv_create_topic_picture"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="16dp"
                android:background="@color/grey"
                app:layout_constraintEnd_toEndOf="@+id/imageView19"
                app:layout_constraintStart_toStartOf="@+id/imageView19"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/rg_create_topic_show_creator_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_edittext_register_login"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView29">

                <RadioButton
                    android:id="@+id/rb_create_topic_yes"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/fredoka_one"
                    android:text="Yes"
                    android:textColor="@color/greytext" />

                <RadioButton
                    android:id="@+id/rb_create_topic_no"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/fredoka_one"
                    android:text="No"
                    android:textColor="@color/greytext" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Include creator information?"
                android:textColor="@color/navy"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/rg_create_topic_show_creator_info"
                app:layout_constraintTop_toBottomOf="@+id/imageView19" />

            <EditText
                android:id="@+id/et_create_topic_description"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_edittext_register_login"
                android:fontFamily="@font/fredoka_one"
                android:gravity="top"
                android:hint="Additional information"
                android:inputType="textMultiLine"
                android:maxLength="200"
                android:padding="10dp"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView22" />

            <EditText
                android:id="@+id/et_create_topic_question"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_edittext_register_login"
                android:fontFamily="@font/fredoka_one"
                android:hint="Question?"
                android:inputType="textPersonName"
                android:maxLength="26"
                android:paddingLeft="16dp"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView25" />

            <EditText
                android:id="@+id/et_create_topic_answer1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_edittext_register_login"
                android:ems="10"
                android:fontFamily="@font/fredoka_one"
                android:hint="Answer 1"
                android:inputType="textPersonName"
                android:maxLength="26"
                android:paddingLeft="16dp"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView24" />

            <EditText
                android:id="@+id/et_create_topic_answer2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="200dp"
                android:background="@drawable/rounded_edittext_register_login"
                android:ems="10"
                android:fontFamily="@font/fredoka_one"
                android:hint="Answer 2"
                android:inputType="textPersonName"
                android:maxLength="26"
                android:paddingLeft="16dp"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView23" />

            <ProgressBar
                android:id="@+id/pb_create_topic_picture"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/iv_create_topic_picture"
                app:layout_constraintEnd_toEndOf="@+id/iv_create_topic_picture"
                app:layout_constraintStart_toStartOf="@+id/iv_create_topic_picture"
                app:layout_constraintTop_toTopOf="@+id/iv_create_topic_picture" />

            <TextView
                android:id="@+id/tv_create_topic_add_picture_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka_one"
                android:text="Add picture"
                android:textColor="@color/greytext"
                app:layout_constraintBottom_toBottomOf="@+id/iv_create_topic_picture"
                app:layout_constraintEnd_toEndOf="@+id/iv_create_topic_picture"
                app:layout_constraintStart_toStartOf="@+id/iv_create_topic_picture"
                app:layout_constraintTop_toTopOf="@+id/iv_create_topic_picture" />

            <ImageView
                android:id="@+id/iv_create_group_trending"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_edittext_register_login"
                android:padding="4dp"
                android:src="@drawable/ic_fire"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/imageView19"
                app:layout_constraintStart_toEndOf="@+id/iv_create_topic_picture"
                app:layout_constraintTop_toTopOf="@+id/iv_create_topic_picture" />

            <TextView
                android:id="@+id/tv_create_group_trending"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_register_login"
                android:fontFamily="@font/fredoka_one"
                android:text="Your topic is currently trending!"
                android:textAlignment="center"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/iv_create_group_trending"
                app:layout_constraintStart_toStartOf="@+id/iv_create_group_trending"
                app:layout_constraintTop_toBottomOf="@+id/iv_create_group_trending" />

            <TextView
                android:id="@+id/tv_create_topic_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/fredoka_one"
                android:textColor="@color/green"
                app:layout_constraintBottom_toBottomOf="@+id/et_create_topic_description"
                app:layout_constraintEnd_toEndOf="@+id/et_create_topic_description" />

            <Button
                android:id="@+id/b_create_topic_delete"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/error_edittext_register_login"
                android:fontFamily="@font/fredoka_one"
                android:text="Delete"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/red"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/et_create_topic_answer2"
                app:layout_constraintTop_toBottomOf="@+id/et_create_topic_answer2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>