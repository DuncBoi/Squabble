<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".messenger.DefaultMessenger">


    <ImageView
        android:id="@+id/iv_default_messanger_dm"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/message_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_default_messanger_make_group"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/make_group_chat_icon"
        app:layout_constraintBottom_toBottomOf="@+id/iv_default_messanger_dm"
        app:layout_constraintEnd_toStartOf="@+id/iv_default_messanger_dm"
        app:layout_constraintTop_toTopOf="@+id/iv_default_messanger_dm" />

    <EditText
        android:id="@+id/et_default_messenger_search"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_edittext_register_login"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:drawablePadding="4dp"
        android:ems="10"
        android:fontFamily="@font/fredoka_one"
        android:hint="Search Users"
        android:inputType="textPersonName"
        android:paddingLeft="8dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_default_messanger_make_group"
        app:layout_constraintEnd_toStartOf="@+id/iv_default_messanger_make_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_default_messanger_make_group" />

</androidx.constraintlayout.widget.ConstraintLayout>