<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="147dp"
    android:layout_centerHorizontal="true"
    android:background="#ffffff"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingRight="5dp">


    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="71dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/b_profile_picture_dialog_camera"
            android:layout_width="71dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_profile_picture_dialog_camera"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                app:srcCompat="@drawable/camera" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_profile_picture_dialog_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/fredoka_one"
            android:text="Camera"
            android:textAlignment="viewStart"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/b_profile_picture_dialog_library"
            android:layout_width="72dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_profile_picture_dialog_library"
                android:layout_width="71dp"
                android:layout_height="61dp"
                app:srcCompat="@drawable/library" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_profile_picture_dialog_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/fredoka_one"
            android:text="Library"
            android:textAlignment="viewStart"
            android:textSize="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/b_profile_picture_dialog_cancel"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext_register_login"
        android:fontFamily="@font/fredoka_one"
        android:text="Cancel"
        android:textColor="@android:color/tertiary_text_dark" />

</LinearLayout>