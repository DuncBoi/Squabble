<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:padding="10dp"
    android:background="@drawable/rounded_edittext_register_login">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_recycler_topics_card"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:elevation="10dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/iv_recycler_topics_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/face_icon"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_recycler_topics_header"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/cv_recycler_topics_card"
        android:ellipsize="end"
        android:fontFamily="@font/fredoka_one"
        android:maxLines="1"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_recycler_topics_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_recycler_topics_header"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@+id/cv_recycler_topics_card"
        android:ellipsize="end"
        android:fontFamily="@font/fredoka_one"
        android:maxLines="2"
        android:textColor="@color/navy"
        android:textSize="14sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/iv_recycler_topics_trending"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_recycler_topics_header"
        android:background="@drawable/rounded_edittext_register_login"
        android:padding="4dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_fire" />

    <TextView
        android:id="@+id/tv_recycler_topics_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cv_recycler_topics_card"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/fredoka_one"
        android:textColor="@color/green" />


</RelativeLayout>