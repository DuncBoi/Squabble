<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_edittext_register_login"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_recycler_notification_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/profile_icon" />

    <TextView
        android:id="@+id/tv_recycler_notification_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/civ_recycler_notification_profile"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/imageView7"
        android:layout_toEndOf="@+id/civ_recycler_notification_profile"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center_vertical"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/civ_recycler_notification_profile"
        android:layout_alignBottom="@+id/civ_recycler_notification_profile"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/arrow" />

    <TextView
        android:id="@+id/tv_recycler_notification_time_ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_recycler_notification_message"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/civ_recycler_notification_profile"
        android:fontFamily="@font/fredoka_one"
        android:textSize="12sp" />
</RelativeLayout>