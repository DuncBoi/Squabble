<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OtherProfile">


    <ImageView
        android:id="@+id/iv_other_profile_following_holder"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_other_profile_bio"
        app:layout_constraintEnd_toStartOf="@+id/iv_other_profile_followers_holder"
        app:layout_constraintTop_toTopOf="@+id/iv_other_profile_bio" />

    <ImageView
        android:id="@+id/iv_other_profile_activity_holder"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_other_profile_bio"
        app:layout_constraintStart_toStartOf="@+id/iv_other_profile_bio"
        app:layout_constraintTop_toTopOf="@+id/iv_other_profile_following_holder" />

    <ImageView
        android:id="@+id/iv_other_profile_follow_holder"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/civ_other_profile_profile_picture"
        app:layout_constraintTop_toTopOf="@+id/civ_other_profile_profile_picture" />

    <ImageView
        android:id="@+id/iv_other_profile_followers_holder"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_other_profile_bio"
        app:layout_constraintEnd_toEndOf="@+id/iv_other_profile_bio"
        app:layout_constraintTop_toTopOf="@+id/iv_other_profile_bio" />

    <ImageView
        android:id="@+id/iv_other_profile_bio"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_other_profile_name"
        app:srcCompat="@drawable/rounded_edittext_register_login" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_other_profile_profile_picture"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/profile_icon"
        app:civ_border_color="@color/navy"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_other_profile_username" />

    <TextView
        android:id="@+id/tv_other_profile_number_of_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/fredoka_one"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/navy"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_other_profile_followers_holder"
        app:layout_constraintStart_toStartOf="@+id/iv_other_profile_followers_holder"
        app:layout_constraintTop_toBottomOf="@+id/tv_other_profile_followers_text" />

    <TextView
        android:id="@+id/tv_other_profile_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/fredoka_one"
        android:textAlignment="center"
        android:textColor="@color/navy"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/iv_other_profile_info"
        app:layout_constraintStart_toEndOf="@+id/iv_other_profile_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_other_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/fredoka_one"
        android:hint="Name"
        android:maxLength="25"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/civ_other_profile_profile_picture" />

    <TextView
        android:id="@+id/tv_other_profile_followers_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Followers:"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_other_profile_followers_holder"
        app:layout_constraintStart_toStartOf="@+id/iv_other_profile_followers_holder"
        app:layout_constraintTop_toTopOf="@+id/iv_other_profile_followers_holder" />

    <TextView
        android:id="@+id/tv_other_profile_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Following:"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_other_profile_following_holder"
        app:layout_constraintStart_toStartOf="@+id/iv_other_profile_following_holder"
        app:layout_constraintTop_toTopOf="@+id/iv_other_profile_following_holder" />

    <TextView
        android:id="@+id/tv_other_profile_activity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Activity:"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_other_profile_activity_holder"
        app:layout_constraintStart_toStartOf="@+id/iv_other_profile_activity_holder"
        app:layout_constraintTop_toTopOf="@+id/iv_other_profile_activity_holder" />

    <TextView
        android:id="@+id/tv_other_profile_following_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/fredoka_one"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/navy"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_other_profile_following_holder"
        app:layout_constraintStart_toStartOf="@+id/iv_other_profile_following_holder"
        app:layout_constraintTop_toBottomOf="@+id/tv_other_profile_following" />

    <TextView
        android:id="@+id/tv_other_profile_bio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/fredoka_one"
        app:layout_constraintEnd_toEndOf="@+id/iv_other_profile_bio"
        app:layout_constraintStart_toStartOf="@+id/iv_other_profile_bio"
        app:layout_constraintTop_toBottomOf="@+id/iv_other_profile_following_holder" />

    <ImageView
        android:id="@+id/iv_other_profile_info"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings" />

    <ImageView
        android:id="@+id/iv_other_profile_banner"
        android:layout_width="94dp"
        android:layout_height="75dp"
        android:layout_marginTop="22dp"
        android:cropToPadding="false"
        android:rotation="0"
        app:layout_constraintEnd_toStartOf="@+id/civ_other_profile_profile_picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/civ_other_profile_profile_picture" />

    <ImageView
        android:id="@+id/iv_other_profile_follow_symbol"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_other_profile_follow_holder"
        app:layout_constraintStart_toStartOf="@+id/iv_other_profile_follow_holder"
        app:layout_constraintTop_toTopOf="@+id/iv_other_profile_follow_holder"
        app:srcCompat="@drawable/follow_icon" />

    <TextView
        android:id="@+id/tv_other_profile_follow_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_other_profile_follow_holder"
        app:layout_constraintStart_toStartOf="@+id/iv_other_profile_follow_holder"
        app:layout_constraintTop_toBottomOf="@+id/iv_other_profile_follow_symbol" />

    <ImageView
        android:id="@+id/iv_other_profile_back"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>