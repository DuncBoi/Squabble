<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/phone_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneAuthentication">

    <TextView
        android:id="@+id/tv_phone_phone_taken"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/fredoka_one"
        android:textAlignment="viewStart"
        android:textColor="@color/red"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_phone_phone" />

    <TextView
        android:id="@+id/tv_phone_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Phone Authentication"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_phone_please_enter_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Phone number must be registered in the United States"
        android:textAlignment="center"
        android:textColor="@color/navy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone_header" />

    <Button
        android:id="@+id/b_phone_next"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="32dp"
        android:alpha="0.5"
        android:background="@drawable/greyed_out_button"
        android:clickable="false"
        android:fontFamily="@font/fredoka_one"
        android:text="Send Code"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone_phone_taken" />

    <TextView
        android:id="@+id/tv_phone_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/fredoka_one"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        android:text="Previous"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_phone_next" />


    <ImageView
        android:id="@+id/iv_phone_checkmark"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:layout_marginStart="300dp"
        android:layout_marginEnd="8dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="@+id/et_phone_phone"
        app:layout_constraintEnd_toEndOf="@+id/et_phone_phone"
        app:layout_constraintStart_toStartOf="@+id/et_phone_phone"
        app:layout_constraintTop_toTopOf="@+id/et_phone_phone"
        app:srcCompat="@drawable/checkmark" />

    <ImageView
        android:id="@+id/iv_phone_x"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:layout_marginStart="300dp"
        android:layout_marginEnd="8dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="@+id/et_phone_phone"
        app:layout_constraintEnd_toEndOf="@+id/et_phone_phone"
        app:layout_constraintStart_toStartOf="@+id/et_phone_phone"
        app:layout_constraintTop_toTopOf="@+id/et_phone_phone"
        app:srcCompat="@drawable/x" />

    <TextView
        android:id="@+id/tv_phone_format_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:fontFamily="@font/fredoka_one"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_phone_phone"
        app:layout_constraintStart_toStartOf="@+id/et_phone_phone"
        app:layout_constraintTop_toTopOf="@+id/et_phone_phone" />

    <EditText
        android:id="@+id/et_phone_phone"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_edittext_register_login"
        android:digits="0123456789"
        android:ems="10"
        android:fontFamily="@font/fredoka_one"
        android:hint="Phone Number"
        android:inputType="phone"
        android:letterSpacing="0.05"
        android:maxLength="10"
        android:paddingLeft="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone_please_enter_phone" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/fredoka_one"
        android:text="[+1]"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_phone_phone"
        app:layout_constraintStart_toStartOf="@+id/et_phone_phone"
        app:layout_constraintTop_toTopOf="@+id/et_phone_phone" />

    <TextView
        android:id="@+id/tv_phone_formatted_phone"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_edittext_register_login"
        android:ems="10"
        android:fontFamily="@font/fredoka_one"
        android:maxLength="14"
        android:paddingLeft="45dp"
        android:paddingTop="13dp"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_phone_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_phone_phone" />

</androidx.constraintlayout.widget.ConstraintLayout>